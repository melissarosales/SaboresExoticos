{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@env/environment":["environments/environment.ts"],
      "@env/utiles":["environments/utiles.ts"],
      "@core/service/*":["app/core/service/*"],
      "@shared/services/*":["app/shared/service/*"],
      "@core/helper/*":["app/core/helper/*"],
      "@shared/modal/*":["app/shared/modal/*"],
      "@app/model/*":["app/model/*"],
      "@shared/layout/*": ["app/shared/layout/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
